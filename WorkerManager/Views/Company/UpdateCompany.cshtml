@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Worker Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h2>Update Worker</h2>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-md-4 col-md-offset-10">
                <form method="post" action="">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" name="name" aria-describedby="name" placeholder="name" value="@ViewBag.name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">CompanySize</label>
                        <input type="text" class="form-control" name="companySize" aria-describedby="companySize" placeholder="companySize" value="@ViewBag.companySize">
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1">Position</label>
                        <select class="form-control" name="format" >
                            <option>ОАО</option>
                            <option>ЗАО</option>
                            <option>ООО</option>
                            <option>ОДО</option>
                            <option>УП</option>
                            <option>ЧУП</option>
                        </select>
                    </div>

                    <div class="row justify-content-md-center">
                        <div>
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                        </div>

                        <div>
                            <a href="/Company/Cancel/"><button type="button" class="btn btn-danger">Отмена</button></a>
                        </div>
                    </div>


                </form>
            </div>
        </div>



    </div>
</body>
</html>
