@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Worker Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div>
                <h2>AddCompany</h2>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <form method="post" action="">
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" name="name" aria-describedby="name" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">CompanySize</label>
                    <input type="text" class="form-control" name="companySize" aria-describedby="companySize" placeholder="companySize">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Format</label>
                    <input type="text" class="form-control" name="format" aria-describedby="format" placeholder="format">
                </div>
                
                <div class="row justify-content-md-center">
                    <div>
                        <button type="submit" class="btn btn-primary">Добавить</button>
                    </div>

                    <div>
                        <a href="/Company/Cancel/"><button type="button" class="btn btn-danger">Отмена</button></a>
                    </div>
                </div>


            </form>
        </div>
    </div>
</body>
</html>
